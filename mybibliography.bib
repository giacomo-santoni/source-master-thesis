@incollection{en-spectrum-double-beta,
title = {Chapter 4 - Semiconductor detectors. Contributors to this chapter in previous editions are Jan Verplancke, Paul F. Fettweis, Ramkumar Venkataraman, Brian M. Young, and Harold Schwenn.},
editor = {Michael F. L'Annunziata},
